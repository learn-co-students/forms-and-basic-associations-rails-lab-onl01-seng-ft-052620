<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name, "Artist Name:"%>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre_id, "Genre:"%>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />
  <input name="song[note_names][]" id="song_notes_1">
  <input name="song[note_names][]" id="song_notes_2">
  <%# <input name="song[note_names][]" id="song_notes_3"> %>
  <br />

  <%= f.submit %>
<% end %>
