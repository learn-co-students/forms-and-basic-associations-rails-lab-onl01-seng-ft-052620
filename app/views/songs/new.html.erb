<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name, :artist %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre_name, "Genre: " %>
  <%= f.collection_select :genre_id, @genres, :id, :name %>
  <br>
  <input id="song_notes_1" name="song[notes_content][]"><br>  
  <input id="song_notes_2" name="song[notes_content][]"><br>
  <input id="song_notes_3" name="song[notes_content][]"><br>

  <%= f.submit %>
<% end %>


